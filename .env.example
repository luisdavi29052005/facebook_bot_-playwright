
# Facebook Bot Configuration

# n8n webhook URL (required)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/facebook-bot

# Facebook group URL to monitor (required)
FACEBOOK_GROUP_URL=https://facebook.com/groups/your-group-id

# Keywords to filter posts (JSON array format)
KEYWORDS=["keyword1", "keyword2", "keyword3"]

# Bot behavior settings
LOOP_INTERVAL_SECONDS=120
MAX_POSTS_PER_CYCLE=15
HEADLESS=true

# Optional: Logging level
LOG_LEVEL=INFO
